<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_contacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/profile_image_activity"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/user_name_activity"
            android:src="@drawable/profile_image"/>

        <EditText
            android:id="@+id/user_name_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/user_roll_activity"
            android:hint="Name"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="25sp"
            android:background="@drawable/textview"/>

        <EditText
            android:id="@+id/user_roll_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/user_clubs_activity"
            android:hint="Roll no."
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="25sp"
            android:background="@drawable/textview"/>

        <EditText
            android:id="@+id/user_clubs_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/update_profile_button_activity"
            android:hint="Clubs"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="25sp"
            android:background="@drawable/textview"
            android:inputType="textMultiLine"/>

        <Button
            android:id="@+id/update_profile_button_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimary"
            android:text="Update Profile"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="40sp"/>

    </RelativeLayout>

</RelativeLayout>