<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/suggestion_design_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/chat"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/suggestion_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Username"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/suggestion_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/suggestion_by"
            android:textSize="20sp"
            android:text="Some message here"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/suggestion_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/suggestion_message"
            android:layout_toLeftOf="@+id/suggestion_time"
            android:layout_marginRight="20dp"
            android:text="Date"
            android:textSize="15dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/suggestion_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/suggestion_message"
            android:layout_alignParentRight="true"
            android:text="Time"
            android:textSize="15dp"
            android:textColor="@android:color/black"/>

    </RelativeLayout>

</RelativeLayout>